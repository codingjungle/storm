<ips:template parameters="string $title, bool $search=true, string $class=''" />
<div class="stormColumns stormProfilerSearch p-10{{if empty($class) === false}} {$class|raw}{{endif}}">
    <div class="stormColumnLarge">
        <h2>{$title|raw}</h2>
    </div>
    {{if $search === true}}
    <div class="stormColumnFluid stormProfilerWrapper">
        <input type="text" class="ipsInput ipsInput--text" placeholder="Search..." data-search />
        <button data-clear>
            <i class="fa fa-times"></i>
        </button>
        <span></span>
    </div>
    {{endif}}
    <div class="{{if $search === false}}stormColumnFluid{{else}}stormColumnSmall{{endif}} ipsClearfix">
        <button type="button" class="ipsButton ipsButton--secondary float-end" data-close>
            <i class="fa fa-close"></i>
        </button>
    </div>
</div>